{
    "name": "middlewares/utils",
    "type": "library",
    "description": "Common utils for PSR-15 middleware packages",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "psr-11",
        "psr-17",
        "middleware",
        "http"
    ],
    "homepage": "https://github.com/middlewares/utils",
    "support": {
        "issues": "https://github.com/middlewares/utils/issues"
    },
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "laminas/laminas-diactoros": "^3.3",
        "friendsofphp/php-cs-fixer": "^3.41",
        "oscarotero/php-cs-fixer-config": "^2.0",
        "squizlabs/php_codesniffer": "^3.8",
        "slim/psr7": "^1.6",
        "guzzlehttp/psr7": "^2.6",
        "sunrise/http-message": "^3.0",
        "nyholm/psr7": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "phpunit --coverage-text",
        "coverage-html": "phpunit --coverage-html=coverage"
    }
}
